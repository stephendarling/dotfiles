set relativenumber
map <Enter> o<Esc>
filetype plugin indent on
syntax on
set autoindent

noremap <C-h> <Left>
inoremap <C-h> <Left>

" Map Ctrl+J to move down
noremap <C-j> <Down>
inoremap <C-j> <Down>

" Map Ctrl+K to move up
noremap <C-k> <Up>
inoremap <C-k> <Up>

" Map Ctrl+L to move right
noremap <C-l> <Right>
inoremap <C-l> <Right>

set clipboard=unnamedplus
