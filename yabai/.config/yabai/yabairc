yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Set a default tiling layout
yabai -m config layout float
yabai -m config window_gap 10
yabai -m config top_padding    10
yabai -m config bottom_padding 10
yabai -m config left_padding   10
yabai -m config right_padding  10
yabai -m config mouse_modifier alt
yabai -m config mouse_drop_action stack
yabai -m config window_animation_duration 0.0
yabai -m config insert_feedback_color 0x0000ffcc
yabai -m config window_insertion_point first
yabai -m config split_type vertical

# Ignored
# yabai -m rule --add app="^System Settings$" manage=off
# yabai -m rule --add app="^Snagit$" manage=off
# yabai -m rule --add app="^Todoist$" manage=off

# Signals
yabai -m signal --add event=window_created action="$HOME/.config/yabai/scripts/signals/window-created.sh"
yabai -m signal --add event=window_destroyed action="$HOME/.config/yabai/scripts/signals/window-destroyed.sh"
yabai -m signal --add event=display_changed action="$HOME/.config/yabai/scripts/signals/display-changed.sh"

